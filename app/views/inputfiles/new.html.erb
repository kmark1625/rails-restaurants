<div class="container">
  <% if !@inputfile.errors.empty? %>
    <div class = "alert alert-error">

      <ul>
        <% @inputfile.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>

    </div>
  <% end %>
  <div class = "well">
    <div class="container">
      <%= form_for @inputfile, html: { multipart: true } do |f| %>
        <p><%= f.label :name, "Menu Name"%></p>
        <p><%= f.text_field :name %></p>
        <p><%= f.label :description, "Menu Description" %></p>
        <p><%= f.text_area :description %></p>
        <p><%= f.label :attachment %><%= f.file_field :attachment %></p>
        <%= f.submit "Save", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
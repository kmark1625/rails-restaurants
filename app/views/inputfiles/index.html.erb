<div class="container">
  <% if !flash[:notice].blank? %>
    <div class = "alert alert-info">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <br />

  <%= link_to "New Input File", new_inputfile_path, class: "btn btn-primary" %>
  <br />
  <br />

  <table class = "table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>View File</th>
        <th>Calculate Order</th>
        <th>Delete File</th>
      </tr>
    </thead>

    <tbody>
      <% @inputfiles.each do |inputfile| %>
        <% if inputfile.name != "Sample Menu 1" && inputfile.name != "Sample Menu 2" && inputfile.name != "Sample Menu 3" %>
          <tr>
            <td><%= inputfile.name %></td>
            <td><%= button_to "View", inputfile.attachment_url, method: :get, class: "btn btn-primary" %></td>
            <td><%= button_to "Calculate", inputfile_orders_path(inputfile), method: :get, class: "btn btn-primary" %></td>
            <td><%= button_to "Delete", inputfile, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{inputfile.name}?" %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>